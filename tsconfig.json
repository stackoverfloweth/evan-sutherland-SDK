{
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "baseUrl": ".",
    "module": "esnext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "moduleResolution": "node",
    "outDir": "./dist/types/",
    "types": ["vite/client", "jest"],
    "skipLibCheck": true,
    "strict": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.d.ts",
    "./*.ts",
    "./*.d.ts",
  ]
}